<Window x:Class="Prodazha_avto.Prodavec"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prodazha_avto"
        mc:Ignorable="d"
        Title="Prodavec" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для кнопок -->
            <RowDefinition Height="*"/>
            <!-- Для DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Для изображения и кнопки загрузки -->
        </Grid.RowDefinitions>

        <StackPanel Margin="10" Grid.Row="0">
            <TextBlock Text="Менеджер по продаже автомобилей" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <Button Content="Добавить новый автомобиль" Click="AddCarButton_Click" Margin="0,0,0,10" Width="250"/>
            <Button Content="Редактировать автомобиль" Click="EditCarButton_Click" Margin="0,0,0,10" Width="250"/>
            <Button Content="Удалить автомобиль" Click="DeleteCarButton_Click" Margin="0,0,0,20" Width="250"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <DataGrid Name="CarsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Height="216" Width="765">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Фото" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImagePath}" Width="80" Height="60" Stretch="UniformToFill"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Марка" Binding="{Binding Brand}" Width="150"/>
                    <DataGridTextColumn Header="Модель" Binding="{Binding ModelId}" Width="150"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding description}" Width="250"/>
                    <DataGridTextColumn Header="Цвет" Binding="{Binding Color}" Width="100"/>
                    <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
                    <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

       
